generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

model Test {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
}

model superuser {
  id        Int     @id @default(autoincrement())
  name     String
  position   String
  email    String
  password_hash String?

}